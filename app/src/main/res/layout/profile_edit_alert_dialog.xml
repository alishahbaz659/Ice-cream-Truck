<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/dialog_bg"
        android:layout_height="wrap_content"

        >


        <TextView
            android:id="@+id/txt_update_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Update Profile"
            android:textColor="#000000"
            android:textSize="22dp"></TextView>

        <TextView
            android:id="@+id/up_edt_name"
            android:layout_width="300dp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_update_profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Name"
            android:textSize="18dp"></TextView>


        <EditText
            android:id="@+id/edt_name"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@id/up_edt_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_round_edittext"
            android:hint="Enter name"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:textSize="16dp"></EditText>

        <TextView
            android:id="@+id/up_edt_bio"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Bio"
            android:textColor="#000000"
            android:textSize="18dp"></TextView>


        <EditText
            android:id="@+id/edt_bio"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_below="@id/up_edt_bio"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_round_edittext"
            android:gravity="top|left"
            android:hint="Enter short Bio"
            android:inputType="textMultiLine"
            android:paddingStart="5dp"
            android:padding="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:textSize="16dp"></EditText>

        <Button
            android:id="@+id/btn_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_bio"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_btn_login"
            android:text="Update"
            android:textColor="@android:color/white" />

    </RelativeLayout>
</LinearLayout>