<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg">

        <Button
            android:id="@+id/btn_update_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_password_email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_btn_login"
            android:padding="10dp"
            android:text="Update"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/txt_password_email"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@id/Entermail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_round_edittext"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:textSize="16dp"></EditText>

        <TextView
            android:id="@+id/txt_change_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Update Password"
            android:textColor="#000000"
            android:textSize="22dp"></TextView>

        <TextView
            android:id="@+id/Entermail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_change_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Enter email address:"
            android:textColor="#000000"
            android:textSize="18dp"></TextView>
    </RelativeLayout>

</LinearLayout>